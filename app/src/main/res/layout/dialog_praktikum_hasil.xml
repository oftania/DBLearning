<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_hasil"
    android:layout_width="match_parent"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    android:elevation="0dp"
    app:cardElevation="0dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingTop="35dp"
        android:paddingBottom="35dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jawaban "
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_marginBottom="30dp"
            android:textAlignment="center"
            tools:ignore="HardcodedText" />
        <LinearLayout
            android:id="@+id/lyt_salah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="30dp"
            android:orientation="vertical">
            <TextView
                android:layout_margin="5dp"
                android:id="@+id/tv_salah"
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salah"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />
            <EditText
                android:layout_margin="5dp"
                android:id="@+id/edt_jawaban_salah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:gravity="top"
                android:textAlignment="gravity"
                android:background="@drawable/bg_tab_selector"
                android:inputType="text"
                android:textSize="15sp"
                android:importantForAutofill="no"
                tools:ignore="LabelFor" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lyt_benar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_benar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginStart="5dp"
                android:text="Benar"
                android:textColor="@color/black"
                android:textSize="15sp"
                tools:ignore="HardcodedText" />
            <EditText
                android:layout_margin="5dp"
                android:id="@+id/edt_jawaban_benar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:gravity="top"
                android:textAlignment="gravity"
                android:background="@drawable/bg_tab_selector"
                android:inputType="text"
                android:textSize="15sp"
                android:importantForAutofill="no"
                tools:ignore="LabelFor" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>